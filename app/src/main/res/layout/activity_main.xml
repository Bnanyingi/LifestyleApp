<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLifestyleApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-38dp" />

    <EditText
        android:id="@+id/etBibleVerse"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="Here are some bible verses"
        android:text="BibleVerse"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/etQuoteoftheday"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:hint="Here are some quotes"
        android:text="Quotes"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="402dp" />

    <EditText
        android:id="@+id/etMealPlan"
        android:layout_width="218dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:hint="Here are some MealPlans"
        android:text="Meal Plan"
        app:layout_constraintTop_toBottomOf="@+id/etBibleVerse"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:text="Button"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="693dp" />

</androidx.constraintlayout.widget.ConstraintLayout>